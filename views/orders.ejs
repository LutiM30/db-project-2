<!DOCTYPE html>
<html lang="en">
  <!-- Head -->
  <%- include('./layouts/head'); %>

  <body>
    <!-- Responsive navbar-->
    <%- include('./layouts/navbar'); %>

    <!-- Header-->
    <%- include('./layouts/header'); %>

    <!--Main Content-->
    <main class="container pt-5">
      <% if(orders?.length > 0) { %>

      <div class="row mt-3">
        <div class="col">
          <h3>List of Songs</h3>
          <table class="table">
            <thead>
              <tr>
                <th>Title</th>
                <th>Artist</th>
                <th>Genre</th>
                <th>Release Year</th>
                <th>Price</th>
              </tr>
            </thead>
            <tbody id="songList">
              <!-- Songs will be dynamically added here -->
              <% for ( let order of orders ) { %>
              <tr>
                <td><%= order.song.title %></td>
                <td><%= order.song.artist.name %></td>
                <td><%= order.song.genre.name %></td>
                <td><%= order.song.releaseYear %></td>
                <td><%= order.song.price %> CAD</td>
                <!-- <td>
                                            <button onclick="buySong('<%= order.song._id %>')" class="btn btn-primary">Buy</button>
                                        </td> -->
                <!-- <td>
                                            <audio controls>
                                                <source src="<%= order.song.songURL %>" type="audio/mpeg">
                                                Your browser does not support the audio element.
                                            </audio>
                                        </td> -->
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <% } else { %>

      <div class="row mt-3">
        <div class="col">
          <h3>No Songs Found</h3>
        </div>
      </div>

      <% } %>
    </main>

    <!-- Footer-->
    <%- include('./layouts/footer'); %>

    <!-- JS-->
    <%- include('./layouts/script'); %>
  </body>
</html>
